# Environment
NODE_ENV=development

# Server
PORT=8000

# Database
# PostgreSQL (default) - connects to localhost PostgreSQL, not Docker
DATABASE_URL=postgresql://postgres:password@localhost:5432/tonystack

# For production, use environment-specific credentials:
# DATABASE_URL=postgresql://user:password@your-host:5432/your-db

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info

# Optional: External Services
# EMAIL_SERVICE_API_KEY=your-email-service-key
# S3_BUCKET_NAME=your-bucket-name
# S3_ACCESS_KEY=your-s3-access-key
# S3_SECRET_KEY=your-s3-secret-key