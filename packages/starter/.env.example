# Environment
NODE_ENV=development

# Server
PORT=8000

# Database
# PostgreSQL (default) - connects to localhost PostgreSQL, not Docker
# Database name follows pattern: project-name -> project_name_db
DATABASE_URL=postgresql://postgres:password@localhost:5432/tonystack_db

# For production, use environment-specific credentials:
# DATABASE_URL=postgresql://user:password@your-host:5432/your-project-db

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info

# JWT Authentication (only if using --with-auth)
JWT_SECRET=change-this-to-random-secret-in-production
JWT_ISSUER=tonystack
JWT_EXPIRY=7d

# Optional: External Services
# EMAIL_SERVICE_API_KEY=your-email-service-key
# S3_BUCKET_NAME=your-bucket-name
# S3_ACCESS_KEY=your-s3-access-key
# S3_SECRET_KEY=your-s3-secret-key