# Docker Environment Configuration
# Copy this to .env when using Docker

# Application
ENVIRONMENT=production
PORT=8000

# PostgreSQL Database
POSTGRES_DB=tonystack
POSTGRES_USER=tonystack
POSTGRES_PASSWORD=change-this-in-production

# Database Connection
DATABASE_URL=postgresql://tonystack:change-this-in-production@postgres:5432/tonystack

# JWT Configuration
JWT_SECRET=change-this-secret-key-in-production-use-at-least-32-chars
JWT_EXPIRES_IN=7d

# External Port Mappings (host:container)
APP_PORT=8000
POSTGRES_PORT=5432
