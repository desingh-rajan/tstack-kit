{
  "tasks": {
    "dev": "deno run --allow-all --unstable-kv --env --watch src/main.ts",
    "start": "deno run --allow-all --unstable-kv --env src/main.ts",
    "test": "deno test --allow-all --unstable-kv src/",
    "check": "deno fmt --check && deno lint",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "hono": "jsr:@hono/hono@4.6.0",
    "@std/assert": "jsr:@std/assert@1.0.0"
  },
  "fmt": { "semiColons": true, "singleQuote": false },
  "lint": { "rules": { "tags": ["recommended"] } },
  "compilerOptions": { "lib": ["deno.window", "deno.unstable"], "strict": true }
}
