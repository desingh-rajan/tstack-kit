{
  "tasks": {
    "dev": "deno run --allow-all --watch src/main.ts",
    "start": "deno run --allow-all src/main.ts",
    "routes": "deno run --allow-all scripts/list-routes.ts",
    "setup": "deno task db:migrate && deno task db:seed",
    "test": "deno run --allow-all scripts/setup-test-full.ts && ENVIRONMENT=test deno test --allow-all src/_test_setup.ts src/ && deno run --allow-all scripts/cleanup-test-db.ts",
    "test:watch": "ENVIRONMENT=test deno test --allow-all --watch src/",
    "db:create": "deno run --allow-env --allow-net --allow-read scripts/create-db.ts",
    "db:migrate": "deno run --allow-all scripts/migrate-run.ts",
    "db:generate": "deno run --allow-all scripts/migrate-generate.ts",
    "db:seed": "deno run --allow-all scripts/seed-superadmin.ts && deno run --allow-all scripts/seed-alpha-user.ts && deno run --allow-all scripts/seed-regular-user.ts && deno run --allow-all scripts/seed-site-settings.ts",
    "seed:ecommerce": "deno run --allow-all scripts/seed-ecommerce.ts",
    "db:studio": "deno run --allow-all scripts/db-studio.ts",
    "migrate:run": "deno task db:migrate",
    "migrate:generate": "deno task db:generate",
    "check": "deno fmt --check && deno lint",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.0",
    "@std/fs": "jsr:@std/fs@1.0.20",
    "@std/testing/bdd": "jsr:@std/testing@1.0.0/bdd",
    "@std/dotenv/load": "jsr:@std/dotenv@0.225.0/load",
    "@std/dotenv": "jsr:@std/dotenv@0.225.0",
    "@tstack/admin": "jsr:@tstack/admin@2.2.1",
    "jose": "npm:jose@5.9.6",
    "hono": "jsr:@hono/hono@4.6.0",
    "hono/cors": "jsr:@hono/hono@4.6.0/cors",
    "hono/logger": "jsr:@hono/hono@4.6.0/logger",
    "hono/jwt": "jsr:@hono/hono@4.6.0/jwt",
    "hono/dev": "jsr:@hono/hono@4.6.0/dev",
    "drizzle-orm": "npm:drizzle-orm@0.36.0",
    "drizzle-orm/pg-core": "npm:drizzle-orm@0.36.0/pg-core",
    "drizzle-orm/postgres-js": "npm:drizzle-orm@0.36.0/postgres-js",
    "drizzle-kit": "npm:drizzle-kit@0.28.0",
    "drizzle-zod": "npm:drizzle-zod@0.5.0",
    "postgres": "npm:postgres@3.4.0",
    "zod": "npm:zod@3.23.0",
    "@aws-sdk/client-s3": "npm:@aws-sdk/client-s3@3.700.0",
    "nodemailer": "npm:nodemailer@6.9.0"
  },
  "fmt": { "semiColons": true, "singleQuote": false },
  "lint": { "rules": { "tags": ["recommended"] } },
  "compilerOptions": { "lib": ["deno.window"], "strict": true }
}
