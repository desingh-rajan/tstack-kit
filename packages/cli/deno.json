{
  "name": "@tonystack/cli",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "deno run --allow-read --allow-write mod.ts",
    "test": "deno test --allow-all src/ tests/ && deno run --allow-all scripts/cleanup-test-dbs.ts",
    "test:watch": "deno test --allow-all --watch src/ tests/",
    "test:coverage": "deno test --allow-all --coverage=coverage src/ tests/",
    "test:db": "TONYSTACK_TEST_DB=true deno test --allow-all src/ tests/",
    "cleanup:test-dbs": "deno run --allow-all scripts/cleanup-test-dbs.ts",
    "install": "deno install --global --allow-read --allow-write --allow-env --allow-run --allow-net --config deno.json -n tstack -f mod.ts"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fmt": "jsr:@std/fmt@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0"
  },
  "fmt": {
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "lib": ["deno.window", "deno.ns"],
    "strict": true
  },
  "publish": {
    "include": ["mod.ts", "src/**/*.ts", "README.md", "LICENSE"],
    "exclude": ["tests/**"]
  }
}
