# TStack CLI Environment Variables
# Copy this file to .env and adjust values as needed

# Test Mode (automatically set by test runner, but can be set manually)
# When true, uses separate test KV store at ~/.tstack/projects-test.db
# When false, uses production KV store at ~/.tstack/projects.db
TSTACK_CLI_TEST=false

# Database Testing (optional)
# Enable full database integration tests (requires PostgreSQL)
# Set to "true" to test actual database creation/deletion
# Default: false (skips DB operations in tests for faster runs)
TONYSTACK_TEST_DB=false

# PostgreSQL Configuration for Tests (if TONYSTACK_TEST_DB=true)
# These are used when running full database integration tests
PGUSER=postgres
PGPASSWORD=password
PGHOST=localhost
PGPORT=5432
